@model TPLOCAL1.Models.FormModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <title>Formulaire</title>
    <link rel="stylesheet" href="~/resources/Index.css" />
    <link rel="stylesheet" href="~/resources/Form.css"/>
</head>

<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN"/>
        <h1>Formulaire TP HN avis</h1>
    </header>
    <nav>
        <ul>
            <li><a asp-controller="Home" asp-action="Index" asp-route-id="Index"> Accueil</a></li>
            <li><a asp-controller="Home" asp-action="Index" asp-route-id="OpinionList">Liste avis</a></li>
        </ul>
    </nav>

    <section>
        <form asp-controller="Home" asp-action="ValidationFormulaire" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly"></div>
            <table class="tp-table">
                <tr><th colspan="2" class="tp-th-center">Informations personnelles</th></tr>
                <tr>
                    <td>Nom</td>
                    <td>
                        <input asp-for="Nom" />
                        <span style="color: red" asp-validation-for="Nom"></span>
                    </td>
                </tr>
                <tr>
                    <td>Prénom</td>
                    <td>
                        <input asp-for="Prenom" />
                        <span style="color: red" asp-validation-for="Prenom"></span>
                    </td>
                </tr>
                <tr>
                    <td>Sexe</td>
                    <td>
                        <select asp-for="Sexe">
                            <option value="">Sélectionnez un sexe</option>
                            <option>Homme</option>
                            <option>Femme</option>
                            <option>Autre</option>
                        </select>
                        <span style ="color: red" asp-validation-for="Sexe"></span>
                    </td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td>
                        <input asp-for="Adresse" />
                        <span style="color: red" asp-validation-for="Adresse"></span>
                    </td>
                </tr>
                <tr>
                    <td>Code postal</td>
                    <td>
                        <input asp-for="CodePostal" />
                        <span style="color: red" asp-validation-for="CodePostal"></span>
                    </td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td>
                        <input asp-for="Ville" />
                        <span style="color: red" asp-validation-for="Ville"></span>
                    </td>
                </tr>
                <tr>
                    <td>Adresse email</td>
                    <td>
                        <input asp-for="Email" />
                        <span style="color: red" asp-validation-for="Email"></span>
                    </td>
                </tr>
            </table>
            <table class="tp-table">
                <tr><th colspan="2" class="tp-th-center">Informations formation suivie</th></tr>
                <tr>
                    <td>Date début formation</td>
                    <td>
                        <input asp-for="DateDebut" type="date" />
                        <span style="color: red" asp-validation-for="DateDebut"></span>
                    </td>
                </tr>
                <tr>
                    <td>Formation suivie</td>
                    <td>
                        <select asp-for="TypeFormation">
                            <option value="">Sélectionnez une formation</option>
                            <option>Formation Cobol</option>
                            <option>Formation par objets</option>
                            <option>Formation à double compétence</option>
                        </select>
                        <span style="color: red" asp-validation-for="TypeFormation"></span>
                    </td>
                </tr>
            </table>
            <table class="tp-table">
                <tr><th colspan="2" class="tp-th-center">Avis sur la formation</th></tr>
                <tr>
                    <td>Formation COBOL</td>
                    <td><input asp-for="AvisCobol" /> <span style="color: red" asp-validation-for="AvisCobol"></span></td>
                </tr>
                <tr>
                    <td>Formation C#</td>
                    <td><input asp-for="AvisCSharp" /> <span style="color: red" asp-validation-for="AvisCSharp"></span></td>
                </tr>
            </table>
            <button type="submit">Valider</button>
        </form>
    </section>

</body>
</html>
